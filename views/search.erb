<body>
<div class="controls">
    <form action="search" method="POST">
      <h2>Search from Syllabus</h2>
      <input type="text" name="keyword" placeholder="What are you looking for?" />
      <input type="submit" value="Search" />
    </form>
  </div>

  <div class="controls">
    <h2>Result</h2>
  </div>

<div class="lists" id="result">
  <% if !@lessons.nil? %>
    <% @lessons.each do |lesson| %>
      <div class="item">
      <form action='/new' method='post'>
        <p><%= lesson["lesson"] %></p>
        <input type="hidden" name="lesson"
        value="<%=lesson["lesson"]%>">

        <p><%= lesson["teacher"] %></p>
        <input type="hidden" name="teacher"
        value="<%=lesson["teacher"]%>">

        <p><%= lesson["faculty"] %></p>
        <input type="hidden" name="faculty"
        value="<%=lesson["faculty"]%>">

        <p><%= lesson["term"] %></p>
        <input type="hidden" name="term"
        value="<%=lesson["term"]%>">

        <textarea name="テキストエリア" rows="3" cols="30" wrap="soft" style="color: black" placeholder="Comment"></textarea>
        <%# <input type="text" name="keyword" placeholder="Comment" /> %>
        <input type="submit" value="Post comment" />
        </form>
      </div>
    <%end%>
  <%else%>
    <p>Not Found</p>
  <%end%>
</div>
</body>